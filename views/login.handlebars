<div class="row mt-3 justify-content-center">
    <div class="block col-md-3">
        <h2>Login</h2>

        <form class="form login-form">
            <div class="form-group mb-3">
                <label for="user-login" class="col-sm-4 col-form-label custom-label">Username:</label>
                <input class="form-input col-sm-6" type="text" id="username-login" />
            </div>
            <div class="form-group mb-3">
                <label for="password-login" class="col-sm-4 col-form-label custom-label">Password:</label>
                <input class="form-input col-sm-6" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary cssbtn" type="submit">login</button>
            </div>
        </form>
</div>

<script src="./js/login.js"></script>