{{> postInfo post}}

{{#if loggedIn}}
<form id="commentForm">
  <div class="form-group">
    <label for="commentLabel">Comment Text</label>
    <textarea type="text" class="form-control" id="commentText" name="commentText" placeholder="Comment Text" rows="4"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" id="postSubmit">Submit</button>
</form>
{{/if}}

<ol style="list-style: none;">
    {{#each post.Comments as |comment|}}
    <li>
        <article class="card">
            <div class="card-title">
                <p>{{comment.user.username}} commented on {{format_date comment.created_at}}</p>
            </div>
            <div class="card-body">
                <p>
                    {{comment.comment_text}}
                </p>
            </div>
        </article>
    </li>
    {{/each}}
</ol>

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}